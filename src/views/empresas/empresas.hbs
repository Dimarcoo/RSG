<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Empresa</title>
    <link rel="stylesheet"  href="/styles/style.css">

</head>    
<body>

    <button onclick="mostrarFormularioEmpresa()" class="botonempresa"> AÃ±adir </button>

    <div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg" id="formularioContainer" style="display: none;">
        <h1 class="font-bold text-center">REGISTRAR EMPRESA</h1>
        <form id="FormularioEmpresa" method="post" class="mt-4">
            <input type="text" name="nombre" placeholder="Nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>
            <input type="text" name="telefono" placeholder="Telefono" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>
            <input type="email" name="correo" placeholder="Correo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>
            <input type="text" name="direccion" placeholder="Direccion" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>
            
            <button type="submit" class="btn primary">Guardar</button>
            <button type="cancel" class="btn secondary">Cancelar</button>
        </form>
    </div>
    <!--Contenedor para crear tabla y mostrar los datos en BD -->
    <div  class="mx-center sm:px6 lg:px-8">
        <div class="max-w-screen-md mx-auto px-2 lg:px-4">
            <table class="tabla">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NOMBRE</th>
                        <th>TELEFONO</th>
                        <th>CORREO</th>
                        <th>DIRECCION</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each companies}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.nombre_empresa}}</td>
                        <td>{{this.telefono}}</td>
                        <td>{{this.correo}}</td>
                        <td>{{this.direccion}}</td>
                        <td class="p-3">
                            <form action="/empresas/destroy" method="post">
                                <input type="hidden" value="{{id}}" name="id">    
                                <button class="bg-red-500 text-white px-3 py-1 rounded-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>    
                            <form action="#" method="post"></form>    
                                <button class="bg-green-500 text-white px-3 py-1 rounded-sm">
                                    <i class="fas fa-pen"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <!--<script src="/src/controllers/AdminController.js"></script>-->
    <script>
        function mostrarFormularioEmpresa() {
            var formularioContainer = document.getElementById('formularioContainer');
            formularioContainer.style.display = 'block';
            console.log('funcion llamada');
        }
    </script>
</body>
</html>